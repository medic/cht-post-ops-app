<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Edit Person</h:title>
    <model>
      <instance>
        <data id="contact:person:edit" prefix="J1!contact:person:edit!" delimiter="#" version="2020-04-15 00:00:00">
          <person>
            <parent>PARENT</parent>
            <type>person</type>
            <name/>
            <vmmc_no/>
            <dob/>
            <age/>
            <is_minor/>
            <phone_owner/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
            <enrolled_by/>
          </person>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind nodeset="/data/person/name" type="string" jr:constraintMsg="Please type in name characters e.g letters and space." required="true()" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)"/>
      <bind nodeset="/data/person/vmmc_no" type="string" jr:constraintMsg="Must be 5 â€“ 9 alpha-numeric characters, cannot have white spaces" required="true()" constraint="regex(., '^[\w-]{5,9}$')"/>
      <bind nodeset="/data/person/dob" type="date" jr:constraintMsg="Only 15 - 75 yrs old men can enroll." required="true()" constraint=" /data/person/age  &gt;= 15 and  /data/person/age  &lt;= 75"/>
      <bind nodeset="/data/person/age" type="string" calculate="int((decimal-date-time(today()) - decimal-date-time( /data/person/dob ) ) div 365.25, 0)"/>
      <bind nodeset="/data/person/is_minor" type="string" calculate="if(( /data/person/age  &lt; 18 and  /data/person/age  &gt;= 15), 'yes', 'no')"/>
      <bind nodeset="/data/person/phone_owner" type="select1" relevant=" /data/person/is_minor  = 'yes'" required="true()"/>
      <bind nodeset="/data/person/phone" type="string" jr:constraintMsg="Please enter phone number in the format +27xxxxxxxxx" required="true()" constraint="regex(., '^\+27[0-9]{9}$')"/>
      <bind nodeset="/data/person/alternative_phone" type="string" jr:constraintMsg="Please enter phone number in the format +27xxxxxxxxx" required="false()" constraint="regex(., '^\+27[0-9]{9}$')"/>
      <bind nodeset="/data/person/language_preference" type="select1" required="true()"/>
      <bind nodeset="/data/person/enrolled_by" type="string" jr:constraintMsg="Please type in name characters e.g letters and space." required="true()" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/person">
      <label></label>
      <input appearance="hidden" ref="/data/person/parent">
        <label>Parent</label>
      </input>
      <input appearance="hidden" ref="/data/person/type">
        <label>Person Type</label>
        <hint>mandatory</hint>
      </input>
      <input ref="/data/person/name">
        <label>VMMC Client Name</label>
      </input>
      <input ref="/data/person/vmmc_no">
        <label>VMMC Client Number</label>
      </input>
      <input ref="/data/person/dob">
        <label>VMMC client date of birth</label>
      </input>
      <select1 ref="/data/person/phone_owner">
        <label>Phone Owner</label>
        <item>
          <label>Minor</label>
          <value>minor</value>
        </item>
        <item>
          <label>Guardian</label>
          <value>guardian</value>
        </item>
      </select1>
      <input ref="/data/person/phone">
        <label>Client Mobile phone number</label>
      </input>
      <input ref="/data/person/alternative_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
      </input>
      <select1 ref="/data/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Afrikaans</label>
          <value>afrikaans</value>
        </item>
        <item>
          <label>Setswana</label>
          <value>setswana</value>
        </item>
        <item>
          <label>Sotho</label>
          <value>sotho</value>
        </item>
        <item>
          <label>Zulu</label>
          <value>zulu</value>
        </item>
      </select1>
      <input ref="/data/person/enrolled_by">
        <label>Name of enrollment nurse</label>
      </input>
    </group>
  </h:body>
</h:html>
