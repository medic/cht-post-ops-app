<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Client Review</h:title>
    <model>
      <instance>
        <r id="client_review" prefix="J1!client_review!" delimiter="#" version="2020-03-04 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <phone/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_id tag="hidden"/>
          <phone/>
          <n>
            <client_came/>
            <return_client>
              <client_visit/>
              <health_center>
                <_id tag="hidden"/>
                <name/>
              </health_center>
              <client_visit_location/>
              <visit_date/>
            </return_client>
            <tracing_method/>
            <explain/>
            <nurse/>
          </n>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/patient_id" type="string" required="true()" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/n/client_came" type="select1" required="true()"/>
      <bind nodeset="/r/n/return_client" relevant=" /r/n/client_came  = 'yes'"/>
      <bind nodeset="/r/n/return_client/client_visit" type="select1"/>
      <bind nodeset="/r/n/return_client/health_center" relevant="selected( /r/n/return_client/client_visit , 'chaps_mc_clinic')"/>
      <bind nodeset="/r/n/return_client/health_center/_id" type="db:health_center" required="true()"/>
      <bind nodeset="/r/n/return_client/health_center/name" type="string"/>
      <bind nodeset="/r/n/return_client/client_visit_location" type="string" relevant="selected( /r/n/return_client/client_visit , 'doh') or selected( /r/n/return_client/client_visit , 'private_clinic')"/>
      <bind nodeset="/r/n/return_client/visit_date" type="date" jr:constraintMsg="Date is not in the future: and not more than 4 weeks ago" required="true()" constraint=". &lt;= today() and ((decimal-date-time(today()) - decimal-date-time(.)) &lt;= 28)"/>
      <bind nodeset="/r/n/tracing_method" type="select1" relevant=" /r/n/client_came ='no'" required="true()"/>
      <bind nodeset="/r/n/explain" type="string" relevant="selected( /r/n/tracing_method , 'unknown')" required="true()"/>
      <bind nodeset="/r/n/nurse" type="string" jr:constraintMsg="Please type in name characters e.g letters and space." required="true()" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/r/n">
      <label></label>
      <select1 ref="/r/n/client_came">
        <label>Was client seen by a clinician?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <group ref="/r/n/return_client">
        <label></label>
        <select1 ref="/r/n/return_client/client_visit">
          <label>Which facility?</label>
          <item>
            <label>CHAPS MC team</label>
            <value>chaps_mc_clinic</value>
          </item>
          <item>
            <label>DOH</label>
            <value>doh</value>
          </item>
          <item>
            <label>Private clinic</label>
            <value>private_clinic</value>
          </item>
        </select1>
        <group ref="/r/n/return_client/health_center">
          <label></label>
          <input appearance="db-object" ref="/r/n/return_client/health_center/_id">
            <label>Which clinic?</label>
          </input>
          <input appearance="hidden" ref="/r/n/return_client/health_center/name"/>
        </group>
        <input ref="/r/n/return_client/client_visit_location">
          <label>Specify</label>
        </input>
        <input ref="/r/n/return_client/visit_date">
          <label>Date of visit/review</label>
        </input>
      </group>
      <select1 ref="/r/n/tracing_method">
        <label>Have you traced the client?</label>
        <item>
          <label>Client reached by phone and is ok</label>
          <value>phone</value>
        </item>
        <item>
          <label>Client responded via SMS and is ok</label>
          <value>sms</value>
        </item>
        <item>
          <label>No (Creates TRACE CLIENT task)</label>
          <value>no</value>
        </item>
        <item>
          <label>Unknown</label>
          <value>unknown</value>
        </item>
      </select1>
      <input ref="/r/n/explain">
        <label>Please Explain</label>
      </input>
      <input ref="/r/n/nurse">
        <label>Name of health provider/Nurse</label>
      </input>
    </group>
  </h:body>
</h:html>
