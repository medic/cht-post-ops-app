<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Client Review</h:title>
    <model>
      <instance>
        <r id="client_review" prefix="J1!client_review!" delimiter="#" version="2020-03-04 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <is_referral_for_care_ctx/>
            <is_no_contact_ctx/>
            <contact>
              <_id/>
              <name/>
              <phone/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_id/>
          <phone/>
          <is_referral_for_care/>
          <is_no_contact/>
          <n>
            <client_came/>
            <return_client>
              <health_center>
                <_id/>
                <name/>
              </health_center>
              <visit_date/>
              <ae_positive/>
              <ae_severity/>
              <ae_type/>
            </return_client>
            <trace_client>
              <tracing_method/>
              <client_traced/>
              <client_not_traced_reason/>
              <client_ok/>
              <n_thanks/>
              <q_ae_positive/>
              <ae_positive/>
              <ae_severity/>
              <ae_type/>
            </trace_client>
            <additional_comments/>
            <nurse/>
          </n>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/is_referral_for_care_ctx" type="string"/>
      <bind nodeset="/r/inputs/is_no_contact_ctx" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/patient_id" type="string" required="true()" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/is_referral_for_care" type="string" calculate="../inputs/is_referral_for_care"/>
      <bind nodeset="/r/is_no_contact" type="string" calculate="../inputs/is_no_contact"/>
      <bind nodeset="/r/n/client_came" type="select1" required="true()"/>
      <bind nodeset="/r/n/return_client" relevant=" /r/n/client_came  = 'yes'"/>
      <bind nodeset="/r/n/return_client/health_center/_id" type="db:health_center" required="true()"/>
      <bind nodeset="/r/n/return_client/health_center/name" type="string"/>
      <bind nodeset="/r/n/return_client/visit_date" type="date" required="true()" jr:constraintMsg="Date is not in the future: and not more than 4 weeks ago" constraint=". &lt;= today() and ((decimal-date-time(today()) - decimal-date-time(.)) &lt;= 28)"/>
      <bind nodeset="/r/n/return_client/ae_positive" type="select1" required="true()"/>
      <bind nodeset="/r/n/return_client/ae_severity" type="select1" required="true()" relevant="../ae_positive = 'yes'"/>
      <bind nodeset="/r/n/return_client/ae_type" type="string" required="true()" jr:constraintMsg="The AE Code should be captured in the same way they are recorded in the VMMC register" constraint="regex(., &quot;^[a-zA-Z\-]+$&quot;)" relevant="../ae_positive = 'yes'"/>
      <bind nodeset="/r/n/trace_client" relevant=" /r/n/client_came ='no'"/>
      <bind nodeset="/r/n/trace_client/tracing_method" type="select1" required="true()"/>
      <bind nodeset="/r/n/trace_client/client_traced" type="string" required="true()" calculate="if( /r/n/trace_client/tracing_method  = 'in_person', 'yes', if( /r/n/trace_client/tracing_method  = 'phone', 'yes', 'no'))"/>
      <bind nodeset="/r/n/trace_client/client_not_traced_reason" type="string" required="true()" relevant=" /r/n/trace_client/client_traced  = 'no'"/>
      <bind nodeset="/r/n/trace_client/client_ok" type="select1" required="true()" relevant=" /r/n/trace_client/client_traced  = 'yes'"/>
      <bind nodeset="/r/n/trace_client/n_thanks" readonly="true()" type="string" relevant=" /r/n/trace_client/client_ok  = 'yes'"/>
      <bind nodeset="/r/n/trace_client/q_ae_positive" type="string" calculate="if( /r/n/trace_client/tracing_method  = &quot;in_person&quot;, &quot;Did nurse identify an AE?&quot;, &quot;Did nurse suspect an AE?&quot;)"/>
      <bind nodeset="/r/n/trace_client/ae_positive" type="select1" required="true()" relevant=" /r/n/trace_client/client_ok  = 'no'"/>
      <bind nodeset="/r/n/trace_client/ae_severity" type="select1" required="true()" relevant="../ae_positive = 'yes' and  /r/n/trace_client/tracing_method  = 'in_person'"/>
      <bind nodeset="/r/n/trace_client/ae_type" type="string" required="true()" jr:constraintMsg="The AE Code should be captured in the same way they are recorded in the VMMC register" constraint="regex(., &quot;^[a-zA-Z\-]+$&quot;)" relevant="../ae_positive = 'yes' and  /r/n/trace_client/tracing_method  = 'in_person'"/>
      <bind nodeset="/r/n/additional_comments" type="string" required="false()"/>
      <bind nodeset="/r/n/nurse" type="string" required="true()" jr:constraintMsg="Please type in name characters e.g letters and space." constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/is_referral_for_care_ctx">
        <label>Is a referral for care case</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/is_no_contact_ctx">
        <label>Is a no contact case</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/r/n">
      <label></label>
      <select1 ref="/r/n/client_came">
        <label>Did client return to clinic?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <group ref="/r/n/return_client">
        <label></label>
        <group ref="/r/n/return_client/health_center">
          <label></label>
          <input appearance="db-object" ref="/r/n/return_client/health_center/_id">
            <label>Which clinic?</label>
          </input>
          <input appearance="hidden" ref="/r/n/return_client/health_center/name"/>
        </group>
        <input ref="/r/n/return_client/visit_date">
          <label>Date of visit/review</label>
        </input>
        <select1 ref="/r/n/return_client/ae_positive">
          <label>Did nurse identify an AE?</label>
          <item>
            <label>Yes</label>
            <value>yes</value>
          </item>
          <item>
            <label>No</label>
            <value>no</value>
          </item>
        </select1>
        <select1 ref="/r/n/return_client/ae_severity">
          <label>Severity of the Adverse Event (AE)</label>
          <item>
            <label>Mild</label>
            <value>mild</value>
          </item>
          <item>
            <label>Moderate</label>
            <value>moderate</value>
          </item>
          <item>
            <label>Severe</label>
            <value>severe</value>
          </item>
        </select1>
        <input ref="/r/n/return_client/ae_type">
          <label>AE Code</label>
          <hint>Should be the same AE Code as the one used in the register</hint>
        </input>
      </group>
      <group ref="/r/n/trace_client">
        <label></label>
        <select1 ref="/r/n/trace_client/tracing_method">
          <label>Have you traced the client?</label>
          <item>
            <label>1. Yes, Via Physical visit</label>
            <value>in_person</value>
          </item>
          <item>
            <label>2. Yes, Via Phone call</label>
            <value>phone</value>
          </item>
          <item>
            <label>3. No</label>
            <value>none</value>
          </item>
        </select1>
        <input ref="/r/n/trace_client/client_not_traced_reason">
          <label>If no tracing, explain why not.</label>
        </input>
        <select1 ref="/r/n/trace_client/client_ok">
          <label>Is VMMC Client okay?</label>
          <item>
            <label>Yes</label>
            <value>yes</value>
          </item>
          <item>
            <label>No</label>
            <value>no</value>
          </item>
        </select1>
        <input ref="/r/n/trace_client/n_thanks">
          <label>Thanks for tracing the client</label>
        </input>
        <select1 ref="/r/n/trace_client/ae_positive">
          <label><output value=" /r/n/trace_client/q_ae_positive "/></label>
          <item>
            <label>Yes</label>
            <value>yes</value>
          </item>
          <item>
            <label>No</label>
            <value>no</value>
          </item>
        </select1>
        <select1 ref="/r/n/trace_client/ae_severity">
          <label>Severity of the Adverse Event (AE)</label>
          <item>
            <label>Mild</label>
            <value>mild</value>
          </item>
          <item>
            <label>Moderate</label>
            <value>moderate</value>
          </item>
          <item>
            <label>Severe</label>
            <value>severe</value>
          </item>
        </select1>
        <input ref="/r/n/trace_client/ae_type">
          <label>AE Code</label>
          <hint>Should be the same AE Code as the one used in the register</hint>
        </input>
      </group>
      <input ref="/r/n/additional_comments">
        <label>Any Additional Comments</label>
      </input>
      <input ref="/r/n/nurse">
        <label>Name of health provider/Nurse</label>
      </input>
    </group>
  </h:body>
</h:html>
