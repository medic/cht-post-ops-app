{
  "name": "itech-aurum",
  "version": "0.1.0",
  "description": "",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run compile-forms && npm run compile-app-settings && npm run unittest",
    "unittest": "mocha test/**/*.spec.js --timeout 15000 --slow 500",
    "compile-app-settings": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check compile-app-settings",
    "compile-forms": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check convert-app-forms convert-contact-forms",
    "travis": "npm install && npm test",
    "deploy-app-forms": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check --url=$url convert-app-forms upload-app-forms",
    "deploy-contact-forms": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check --url=$url convert-contact-forms upload-contact-forms",
    "deploy-app-settings": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check --url=$url compile-app-settings upload-app-settings",
    "deploy-translations": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check --url=$url upload-custom-translations",
    "deploy-resources": "node ./node_modules/medic-conf/src/bin/medic-conf.js --no-check --url=$url upload-resources",
    "deploy": "npm run deploy-translations && npm run deploy-app-forms && npm run deploy-contact-forms && npm run deploy-app-settings && npm run deploy-resources"
  },
  "devDependencies": {
    "@medic/eslint-config": "^1.1.0",
    "eslint": "^7.4.0",
    "eslint-plugin-json": "^2.0.1",
    "medic-conf": "^3.2.0",
    "medic-conf-test-harness": "^0.1.30"
  }
}
