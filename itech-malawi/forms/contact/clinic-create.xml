<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>New Household</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/data/clinic/external_id:label">
            <value>External ID</value>
          </text>
          <text id="/data/clinic/is_name_generated/false:label">
            <value>No, I want to name it manually</value>
          </text>
          <text id="/data/clinic/is_name_generated/true:label">
            <value>Yes</value>
          </text>
          <text id="/data/clinic/is_name_generated:label">
            <value>Would you like to name the place after the primary contact: <output value=" /data/contact/person_name "/>?</value>
          </text>
          <text id="/data/clinic/name:label">
            <value>Name</value>
          </text>
          <text id="/data/clinic/notes:label">
            <value>Notes</value>
          </text>
          <text id="/data/contact/alt_phone:hint">
            <value>Should start with the country code +265 followed by Nine digits</value>
          </text>
          <text id="/data/contact/alt_phone:label">
            <value>Alternative/Next of Kin's Mobile Number</value>
          </text>
          <text id="/data/contact/arv_no:label">
            <value>ARV Number</value>
          </text>
          <text id="/data/contact/first_name:label">
            <value>First Name</value>
          </text>
          <text id="/data/contact/language_preference/chichewa:label">
            <value>Chichewa</value>
          </text>
          <text id="/data/contact/language_preference/english:label">
            <value>English</value>
          </text>
          <text id="/data/contact/language_preference:label">
            <value>What is this client's language of preference for the texts?</value>
          </text>
          <text id="/data/contact/mpc_no:hint">
            <value>The Patient ID should be in P1700.. format</value>
          </text>
          <text id="/data/contact/mpc_no:label">
            <value>MPC Patient ID</value>
          </text>
          <text id="/data/contact/phone:hint">
            <value>Should start with the country code +265 followed by Nine digits</value>
          </text>
          <text id="/data/contact/phone:label">
            <value>Phone Number</value>
          </text>
          <text id="/data/contact/rapidpro/adherence:label">
            <value>Adherence</value>
          </text>
          <text id="/data/contact/rapidpro/language:label">
            <value>Language</value>
          </text>
          <text id="/data/contact/rapidpro/optout:label">
            <value>Optout</value>
          </text>
          <text id="/data/contact/rapidpro/reminders:label">
            <value>Reminders</value>
          </text>
          <text id="/data/contact/rapidpro/visit_date:label">
            <value>Visit Date</value>
          </text>
          <text id="/data/contact/rapidpro:label">
            <value>RapidPro</value>
          </text>
          <text id="/data/contact/surname:label">
            <value>Surname</value>
          </text>
          <text id="/data/contact:label">
            <value>New Person</value>
          </text>
          <text id="/data/init/create_new_person/new_person:label">
            <value>Create a new person</value>
          </text>
          <text id="/data/init/create_new_person/none:label">
            <value>Skip this step</value>
          </text>
          <text id="/data/init/create_new_person/old_person:label">
            <value>Select an existing person</value>
          </text>
          <text id="/data/init/create_new_person:label">
            <value>Set the Primary Contact</value>
          </text>
          <text id="/data/init/custom_place_name:label">
            <value><output value=" /data/init/custom_place_name_label "/></value>
          </text>
          <text id="/data/init/custom_place_name_label_translator/name:label">
            <value>Name</value>
          </text>
          <text id="/data/init/generated_name/clinic:label">
            <value><output value=" /data/init/contact_name "/>'s Household</value>
          </text>
          <text id="/data/init/generated_name/district_hospital:label">
            <value><output value=" /data/init/contact_name "/>'s Health Facility</value>
          </text>
          <text id="/data/init/generated_name/health_center:label">
            <value><output value=" /data/init/contact_name "/>'s Area</value>
          </text>
          <text id="/data/init/place_type/clinic:label">
            <value>Household</value>
          </text>
          <text id="/data/init/place_type/district_hospital:label">
            <value>Health Facility</value>
          </text>
          <text id="/data/init/place_type/health_center:label">
            <value>Area</value>
          </text>
          <text id="/data/init/place_type:label">
            <value>Enter the name of this place</value>
          </text>
          <text id="/data/init/select_person:label">
            <value>Select the Primary Contact</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="contact:clinic:create" prefix="J1!contact:clinic:create!" delimiter="#" version="2019-10-23  12-01">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <clinic>
            <parent>PARENT</parent>
            <type/>
            <is_name_generated>true</is_name_generated>
            <name/>
            <external_id/>
            <notes/>
            <contact/>
            <geolocation/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
            </meta>
          </clinic>
          <init>
            <create_new_person/>
            <contact>
              <parent>PARENT</parent>
            </contact>
            <select_person/>
            <name/>
            <contact_name/>
            <custom_place_name_label_translator/>
            <custom_place_name_label/>
            <custom_place_name/>
            <place_type>clinic</place_type>
            <place_type_translation/>
            <generated_name>clinic</generated_name>
            <generated_name_translation/>
          </init>
          <contact>
            <parent>PARENT</parent>
            <type>person</type>
            <role/>
            <first_name/>
            <surname/>
            <name/>
            <person_name/>
            <mpc_no/>
            <arv_no/>
            <phone/>
            <alt_phone/>
            <language_preference/>
            <language_code/>
            <rapidpro>
              <optout/>
              <language/>
              <reminders/>
              <adherence/>
              <visit_date/>
            </rapidpro>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
            </meta>
          </contact>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/init/create_new_person" type="select1" required="true()"/>
      <bind nodeset="/data/init/contact" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/init/contact/parent" type="string"/>
      <bind nodeset="/data/init/select_person" type="db:person" relevant="selected( /data/init/create_new_person ,'old_person')" required="true()"/>
      <bind nodeset="/data/init/name" type="string"/>
      <bind nodeset="/data/init/contact_name" type="string" calculate="coalesce(../../contact/name, ../name)"/>
      <bind nodeset="/data/init/custom_place_name_label_translator" type="select1" relevant="selected( /data/init/create_new_person ,'none')" calculate="&quot;name&quot;"/>
      <bind nodeset="/data/init/custom_place_name_label" type="string" calculate="jr:choice-name( /data/init/custom_place_name_label_translator ,' /data/init/custom_place_name_label_translator ')"/>
      <bind nodeset="/data/init/custom_place_name" type="string" relevant="selected( /data/init/create_new_person ,'none') or selected( /data/clinic/is_name_generated , 'false') or selected( /data/clinic/is_name_generated , 'no')" required="true()"/>
      <bind nodeset="/data/init/place_type" type="select1"/>
      <bind nodeset="/data/init/place_type_translation" type="string" calculate="jr:choice-name( /data/init/place_type ,' /data/init/place_type ')"/>
      <bind nodeset="/data/init/generated_name" type="select1"/>
      <bind nodeset="/data/init/generated_name_translation" type="string" calculate="jr:choice-name( /data/init/generated_name ,' /data/init/generated_name ')"/>
      <bind nodeset="/data/contact" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/contact/parent" type="string"/>
      <bind nodeset="/data/contact/type" type="string"/>
      <bind nodeset="/data/contact/role" type="string" calculate="patient"/>
      <bind nodeset="/data/contact/first_name" type="string" required="true()"/>
      <bind nodeset="/data/contact/surname" type="string" required="true()"/>
      <bind nodeset="/data/contact/name" type="string" calculate="concat( /data/contact/first_name , ' ',  /data/contact/surname )"/>
      <bind nodeset="/data/contact/person_name" type="string" calculate="../name"/>
      <bind nodeset="/data/contact/mpc_no" type="string" required="true()" constraint="regex(., '^[A-Za-z0-9]{1,7}$')"/>
      <bind nodeset="/data/contact/arv_no" type="string" required="true()"/>
      <bind nodeset="/data/contact/phone" type="string" required="true()" jr:constraintMsg="Please enter a valid mobile number" constraint="regex(., '^\+265[0-9]{9}$')"/>
      <bind nodeset="/data/contact/alt_phone" type="string" jr:constraintMsg="Please enter a valid mobile number" constraint="regex(., '^\+265[0-9]{9}$')"/>
      <bind nodeset="/data/contact/language_preference" type="select1" required="true()"/>
      <bind nodeset="/data/contact/language_code" type="string" calculate="if(selected( /data/contact/language_preference , 'english'), 'eng', 'nya')"/>
      <bind nodeset="/data/contact/rapidpro/optout" type="string" calculate="false()"/>
      <bind nodeset="/data/contact/rapidpro/language" type="string" calculate="../language_preference"/>
      <bind nodeset="/data/contact/rapidpro/reminders" type="string" calculate="true()"/>
      <bind nodeset="/data/contact/rapidpro/adherence" type="string" calculate="true()"/>
      <bind nodeset="/data/contact/rapidpro/visit_date" type="string" calculate="now()"/>
      <bind nodeset="/data/contact/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/contact/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/contact/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/clinic/parent" type="string"/>
      <bind nodeset="/data/clinic/type" type="string"/>
      <bind nodeset="/data/clinic/is_name_generated" type="select1" relevant="not(selected( /data/init/create_new_person ,'none'))" required="true()"/>
      <bind nodeset="/data/clinic/name" type="string" required="true()" calculate="if( ( selected( /data/clinic/is_name_generated , 'true') or selected( /data/clinic/is_name_generated , 'yes') ),  /data/init/generated_name_translation , &quot;' Household&quot;)"/>
      <bind nodeset="/data/clinic/external_id" type="string"/>
      <bind nodeset="/data/clinic/notes" type="string"/>
      <bind nodeset="/data/clinic/contact" type="string" calculate="if(selected( /data/init/create_new_person ,'none'), &quot;&quot;, coalesce( /data/init/select_person ,&quot;NEW&quot;))"/>
      <bind nodeset="/data/clinic/geolocation" type="string" calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))"/>
      <bind nodeset="/data/clinic/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/clinic/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/clinic/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <input ref="/data/inputs/user/contact_id"/>
        <input ref="/data/inputs/user/facility_id"/>
        <input ref="/data/inputs/user/name"/>
      </group>
    </group>
    <group appearance="field-list" ref="/data/init">
      <select1 appearance="horizontal-compact" ref="/data/init/create_new_person">
        <label ref="jr:itext('/data/init/create_new_person:label')"/>
        <item>
          <label ref="jr:itext('/data/init/create_new_person/new_person:label')"/>
          <value>new_person</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/create_new_person/old_person:label')"/>
          <value>old_person</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/create_new_person/none:label')"/>
          <value>none</value>
        </item>
      </select1>
      <group ref="/data/init/contact">
        <input appearance="hidden" ref="/data/init/contact/parent"/>
      <group appearance="field-list" ref="/data/contact">
        <label ref="jr:itext('/data/contact:label')"/>
        <input appearance="hidden" ref="/data/contact/parent"/>
        <input appearance="hidden" ref="/data/contact/type"/>
        <input ref="/data/contact/first_name">
          <label ref="jr:itext('/data/contact/first_name:label')"/>
        </input>
        <input ref="/data/contact/surname">
          <label ref="jr:itext('/data/contact/surname:label')"/>
        </input>
        <input ref="/data/contact/mpc_no">
          <label ref="jr:itext('/data/contact/mpc_no:label')"/>
          <hint ref="jr:itext('/data/contact/mpc_no:hint')"/>
        </input>
        <input ref="/data/contact/arv_no">
          <label ref="jr:itext('/data/contact/arv_no:label')"/>
        </input>
        <input ref="/data/contact/phone">
          <label ref="jr:itext('/data/contact/phone:label')"/>
          <hint ref="jr:itext('/data/contact/phone:hint')"/>
        </input>
        <input ref="/data/contact/alt_phone">
          <label ref="jr:itext('/data/contact/alt_phone:label')"/>
          <hint ref="jr:itext('/data/contact/alt_phone:hint')"/>
        </input>
        <select1 appearance="multiline" ref="/data/contact/language_preference">
          <label ref="jr:itext('/data/contact/language_preference:label')"/>
          <item>
            <label ref="jr:itext('/data/contact/language_preference/english:label')"/>
            <value>english</value>
          </item>
          <item>
            <label ref="jr:itext('/data/contact/language_preference/chichewa:label')"/>
            <value>chichewa</value>
          </item>
        </select1>
        <group appearance="hidden" ref="/data/contact/rapidpro">
          <label ref="jr:itext('/data/contact/rapidpro:label')"/>
        </group>
      </group>
      <input appearance="db-object" ref="/data/init/select_person">
        <label ref="jr:itext('/data/init/select_person:label')"/>
      </input>
      <input appearance="hidden" ref="/data/init/name"/>
      <select1 appearance="hidden" ref="/data/init/custom_place_name_label_translator">
        <item>
          <label ref="jr:itext('/data/init/custom_place_name_label_translator/name:label')"/>
          <value>name</value>
        </item>
      </select1>
      <select1 appearance="hidden" ref="/data/init/place_type">
        <label ref="jr:itext('/data/init/place_type:label')"/>
        <item>
          <label ref="jr:itext('/data/init/place_type/district_hospital:label')"/>
          <value>district_hospital</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/health_center:label')"/>
          <value>health_center</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/place_type/clinic:label')"/>
          <value>clinic</value>
        </item>
      </select1>
      <select1 appearance="hidden" ref="/data/init/generated_name">
        <item>
          <label ref="jr:itext('/data/init/generated_name/district_hospital:label')"/>
          <value>district_hospital</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/generated_name/health_center:label')"/>
          <value>health_center</value>
        </item>
        <item>
          <label ref="jr:itext('/data/init/generated_name/clinic:label')"/>
          <value>clinic</value>
        </item>
      </select1>
    </group>
      <group appearance="hidden" ref="/data/contact/meta"/>
    </group>
    <group appearance="field-list" ref="/data/clinic">
      <select1 appearance="horizontal-compact" ref="/data/clinic/is_name_generated">
        <label ref="jr:itext('/data/clinic/is_name_generated:label')"/>
        <item>
          <label ref="jr:itext('/data/clinic/is_name_generated/true:label')"/>
          <value>true</value>
        </item>
        <item>
          <label ref="jr:itext('/data/clinic/is_name_generated/false:label')"/>
          <value>false</value>
        </item>
      </select1>
      <input ref="/data/init/custom_place_name">
        <label ref="jr:itext('/data/init/custom_place_name:label')"/>
      </input>
      <input ref="/data/clinic/external_id">
        <label ref="jr:itext('/data/clinic/external_id:label')"/>
      </input>
      <input appearance="multiline" ref="/data/clinic/notes">
        <label ref="jr:itext('/data/clinic/notes:label')"/>
      </input>
      <group appearance="hidden" ref="/data/clinic/meta"/>
    </group>
  </h:body>
</h:html>
