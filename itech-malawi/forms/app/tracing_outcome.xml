<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Tracing Outcome</h:title>
    <model>
      <instance>
        <r id="tracing_outcome" prefix="J1!tracing_outcome!" delimiter="#" version="2017-09-30 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <national_id/>
              <filing_number/>
              <phone/>
              <mpc_no/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_phone/>
          <patient_id tag="hidden"/>
          <patient_mpc_id/>
          <b2c_outcome/>
          <explain/>
          <event>
            <selected_outcome/>
            <is_date_known/>
            <date_of_event/>
            <formatted_doe/>
          </event>
          <group_summary>
            <_task_label/>
            <_submit_warning/>
            <_form_description/>
            <_patient_details/>
            <contact_name/>
            <contact_phone/>
            <_national_id/>
            <_filing_number/>
            <_b2c_outcome/>
            <outcome/>
            <_is_date_known/>
            <_date_of_event/>
          </group_summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/national_id" type="string"/>
      <bind nodeset="/r/inputs/contact/filing_number" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/inputs/contact/mpc_no" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/patient_phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/patient_mpc_id" type="string" calculate="../inputs/contact/mpc_no"/>
      <bind nodeset="/r/b2c_outcome" type="select1" required="true()"/>
      <bind nodeset="/r/explain" type="string" relevant="selected( /r/b2c_outcome , 'other')" required="true()"/>
      <bind nodeset="/r/event" relevant="( /r/b2c_outcome  = 'Dead' or  /r/b2c_outcome  = 'T.O Self' or  /r/b2c_outcome  = 'T.O Official' or  /r/b2c_outcome  = 'Stop ARV self' or  /r/b2c_outcome  = 'Stop ARV Official')"/>
      <bind nodeset="/r/event/selected_outcome" readonly="true()" type="string"/>
      <bind nodeset="/r/event/is_date_known" type="select1" required="true()"/>
      <bind nodeset="/r/event/date_of_event" type="date" relevant=" /r/event/is_date_known  = 'yes'" required="true()"/>
      <bind nodeset="/r/event/formatted_doe" type="string" calculate="format-date( /r/event/date_of_event , '%d-%m-%y')"/>
      <bind nodeset="/r/group_summary/_task_label" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_submit_warning" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_form_description" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_national_id" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_filing_number" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_b2c_outcome" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/outcome" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_is_date_known" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/_date_of_event" readonly="true()" type="string" relevant=" /r/event/is_date_known  = 'yes'"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/national_id">
          <label>National ID</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/filing_number">
          <label>Filing Number</label>
        </input>
      </group>
    </group>
    <select1 ref="/r/b2c_outcome">
      <label>Back To Care Outcome?</label>
      <item>
        <label>Error</label>
        <value>Error</value>
      </item>
      <item>
        <label>File not found</label>
        <value>File not found</value>
      </item>
      <item>
        <label>Subsequent visit</label>
        <value>Subsequent visit</value>
      </item>
      <item>
        <label>Not traced</label>
        <value>Not traced</value>
      </item>
      <item>
        <label>Tracing rejected</label>
        <value>Tracing rejected</value>
      </item>
      <item>
        <label>No follow up attempt</label>
        <value>No follow up attempt</value>
      </item>
      <item>
        <label>Dead</label>
        <value>Dead</value>
      </item>
      <item>
        <label>T.O Self</label>
        <value>T.O Self</value>
      </item>
      <item>
        <label>T.O Official</label>
        <value>T.O Official</value>
      </item>
      <item>
        <label>Stop ARV self</label>
        <value>Stop ARV self</value>
      </item>
      <item>
        <label>Stop ARV Official</label>
        <value>Stop ARV Official</value>
      </item>
      <item>
        <label>Refused to Answer</label>
        <value>Refused to Answer</value>
      </item>
      <item>
        <label>Never started ARVs</label>
        <value>Never started ARVs</value>
      </item>
      <item>
        <label>On ARVs gaps</label>
        <value>On ARVs gaps</value>
      </item>
      <item>
        <label>On ARVs no gaps</label>
        <value>On ARVs no gaps</value>
      </item>
      <item>
        <label>Other</label>
        <value>Other</value>
      </item>
    </select1>
    <input ref="/r/explain">
      <label>Please Explain</label>
    </input>
    <group appearance="field-list" ref="/r/event">
      <label></label>
      <input ref="/r/event/selected_outcome">
        <label>Outcome: <output value=" /r/b2c_outcome "/></label>
      </input>
      <select1 ref="/r/event/is_date_known">
        <label>Is Date Known</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <input ref="/r/event/date_of_event">
        <label>Date of Event</label>
      </input>
    </group>
    <group appearance="field-list summary" ref="/r/group_summary">
      <label>Summary page</label>
      <input appearance="h1 blue" ref="/r/group_summary/_task_label">
        <label>Task Label</label>
      </input>
      <input appearance="h1" ref="/r/group_summary/_submit_warning">
        <label>Be sure to submit to complete this action</label>
      </input>
      <input ref="/r/group_summary/_form_description">
        <label>Form description: Complete this form to capture the tracing outcomes.</label>
      </input>
      <input appearance="h1 yellow" ref="/r/group_summary/_patient_details">
        <label>Patient Details &lt;I class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/r/group_summary/contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/group_summary/contact_phone">
        <label>Patient Phone: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/group_summary/_national_id">
        <label>National ID: <output value=" /r/inputs/contact/national_id "/></label>
      </input>
      <input ref="/r/group_summary/_filing_number">
        <label>Filing Number: <output value=" /r/inputs/contact/filing_number "/></label>
      </input>
      <input appearance="h1 blue" ref="/r/group_summary/_b2c_outcome">
        <label>Findings</label>
      </input>
      <input ref="/r/group_summary/outcome">
        <label>Back To Care Outcome: <output value=" /r/b2c_outcome "/></label>
      </input>
      <input ref="/r/group_summary/_is_date_known">
        <label>Is Date Known: <output value=" /r/event/is_date_known "/></label>
      </input>
      <input ref="/r/group_summary/_date_of_event">
        <label>Date of Event: <output value=" /r/event/formatted_doe "/></label>
      </input>
    </group>
  </h:body>
</h:html>
