<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Stop Message</h:title>
    <model>
      <instance>
        <r id="stop_message_outcome" prefix="J1!stop_message_outcome!" delimiter="#" version="2017-09-30 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <phone/>
            </contact>
          </inputs>
          <patient_name/>
          <phone/>
          <patient_id tag="hidden"/>
          <message>
            <message_to_stop/>
          </message>
          <adherence_reasons/>
          <reminders_reasons/>
          <will_be_muted/>
          <explain/>
          <rapidpro>
            <optout/>
            <adherence/>
            <reminders/>
          </rapidpro>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/message/message_to_stop" type="select" required="true()"/>
      <bind nodeset="/r/adherence_reasons" type="select" required="true()" relevant="selected( /r/message/message_to_stop , 'motivation_messages')"/>
      <bind nodeset="/r/reminders_reasons" type="select" required="true()" relevant="selected( /r/message/message_to_stop , 'visit_reminders')"/>
      <bind nodeset="/r/will_be_muted" type="string" calculate="../message/message_to_stop = 'motivation_messages visit_reminders'"/>
      <bind nodeset="/r/explain" type="string"/>
      <bind nodeset="/r/rapidpro/optout" type="string" calculate="../../message/message_to_stop = 'motivation_messages visit_reminders'"/>
      <bind nodeset="/r/rapidpro/adherence" type="string" calculate="../../message/message_to_stop = motivation_messages"/>
      <bind nodeset="/r/rapidpro/reminders" type="string" calculate="../../message/message_to_stop = 'visit_reminders'"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
      </group>
    </group>
    <group ref="/r/message">
      <label>Complete this form to stop sending message to client</label>
      <select ref="/r/message/message_to_stop">
        <label>Which messages would you like to stop for <output value=" /r/patient_name "/>?</label>
        <item>
          <label>Motivation Messages</label>
          <value>motivation_messages</value>
        </item>
        <item>
          <label>Visit Reminders</label>
          <value>visit_reminders</value>
        </item>
      </select>
    </group>
    <select ref="/r/adherence_reasons">
      <label>Reason(s) for opting out of motivational messages?</label>
      <item>
        <label>Messages are too many</label>
        <value>too_many_messages</value>
      </item>
      <item>
        <label>Does not wish to continue participating in the study</label>
        <value>discontinue_study</value>
      </item>
      <item>
        <label>Has raised confidentiality concerns</label>
        <value>confidentiality_concerns</value>
      </item>
      <item>
        <label>No longer has access to a mobile device</label>
        <value>no_mobile_device</value>
      </item>
      <item>
        <label>Other</label>
        <value>other</value>
      </item>
    </select>
    <select ref="/r/reminders_reasons">
      <label>Reason(s) for opting out of visit reminders?</label>
      <item>
        <label>Messages are too many</label>
        <value>too_many_messages</value>
      </item>
      <item>
        <label>Does not wish to continue participating in the study</label>
        <value>discontinue_study</value>
      </item>
      <item>
        <label>Has raised confidentiality concerns</label>
        <value>confidentiality_concerns</value>
      </item>
      <item>
        <label>No longer has access to a mobile device</label>
        <value>no_mobile_device</value>
      </item>
      <item>
        <label>Other</label>
        <value>other</value>
      </item>
    </select>
    <input ref="/r/explain">
      <label>Please Explain</label>
    </input>
    <group appearance="hidden" ref="/r/rapidpro">
      <label></label>
    </group>
  </h:body>
</h:html>
