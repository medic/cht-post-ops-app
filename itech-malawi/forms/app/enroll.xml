<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Enroll New Person</h:title>
    <model>
      <instance>
        <enroll id="enroll" prefix="J1!enroll!" delimiter="#" version="2020-03-10 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <is_task/>
            <contact>
              <_id/>
              <name/>
              <parent>
                <_id/>
              </parent>
            </contact>
          </inputs>
          <patient_name/>
          <patient_uuid db-doc-ref=" /enroll/person " tag="hidden"/>
          <place_id tag="hidden"/>
          <patient_phone/>
          <ctx/>
          <editing/>
          <forbid>
            <n_edit/>
            <no_edit>0</no_edit>
          </forbid>
          <person db-doc="true">
            <parent>
              <_id/>
              <parent>
                <_id/>
              </parent>
            </parent>
            <type/>
            <role/>
            <rapidpro>
              <optout/>
              <language/>
              <reminders/>
              <adherence/>
              <visit_date/>
            </rapidpro>
            <first_name/>
            <surname/>
            <name/>
            <national_id/>
            <filing_number>FN</filing_number>
            <consent/>
            <phone/>
            <alt_phone/>
            <language_preference/>
            <language_code/>
            <telegram_id/>
          </person>
          <summary>
            <d_first_name/>
            <d_surname/>
            <d_national_id/>
            <d_filing_number/>
            <d_consent/>
            <d_phone/>
            <d_alt_phone/>
            <d_selected_language/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </enroll>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/enroll/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/enroll/inputs/source" type="string"/>
      <bind nodeset="/enroll/inputs/source_id" type="string"/>
      <bind nodeset="/enroll/inputs/is_task" type="string"/>
      <bind nodeset="/enroll/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/enroll/inputs/contact/name" type="string"/>
      <bind nodeset="/enroll/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/enroll/patient_name" type="string" calculate="concat(../person/first_name, ' ', ../person/surname)"/>
      <bind nodeset="/enroll/patient_uuid" type="string" calculate="person"/>
      <bind nodeset="/enroll/place_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/enroll/patient_phone" type="string" calculate="../person/phone"/>
      <bind nodeset="/enroll/ctx" type="string" calculate="instance('contact-summary')/context/isContact"/>
      <bind nodeset="/enroll/editing" type="string" calculate="if( /enroll/ctx  = 'yes', 'no', 'yes')"/>
      <bind nodeset="/enroll/forbid" relevant="../editing = 'yes'"/>
      <bind nodeset="/enroll/forbid/n_edit" readonly="true()" type="string"/>
      <bind nodeset="/enroll/forbid/no_edit" type="int" constraint=". = 1"/>
      <bind nodeset="/enroll/person/parent/_id" type="string" calculate="../../../inputs/contact/_id"/>
      <bind nodeset="/enroll/person/parent/parent/_id" type="string" calculate="../../../../inputs/contact/parent/_id"/>
      <bind nodeset="/enroll/person/type" type="string" calculate="&quot;person&quot;"/>
      <bind nodeset="/enroll/person/role" type="string" calculate="&quot;patient&quot;"/>
      <bind nodeset="/enroll/person/rapidpro/optout" type="string" calculate="false()"/>
      <bind nodeset="/enroll/person/rapidpro/language" type="string" calculate="../language_preference"/>
      <bind nodeset="/enroll/person/rapidpro/reminders" type="string" calculate="true()"/>
      <bind nodeset="/enroll/person/rapidpro/adherence" type="string" calculate="true()"/>
      <bind nodeset="/enroll/person/rapidpro/visit_date" type="string" calculate="date-time(decimal-date-time(now())+90)"/>
      <bind nodeset="/enroll/person/first_name" type="string" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" required="true()"/>
      <bind nodeset="/enroll/person/surname" type="string" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" required="true()"/>
      <bind nodeset="/enroll/person/name" type="string" calculate="concat( /enroll/person/first_name , ' ',  /enroll/person/surname )"/>
      <bind nodeset="/enroll/person/national_id" type="string" constraint="regex(., '^[a-zA-Z0-9]{6,13}$')" required="true()"/>
      <bind nodeset="/enroll/person/filing_number" type="string" constraint="regex(., '^FN[0-9]+$')" required="true()"/>
      <bind nodeset="/enroll/person/consent" type="select" jr:requiredMsg="Please confirm consent" jr:constraintMsg="Client must give consent to be registered" required="true()"/>
      <bind nodeset="/enroll/person/phone" type="string" constraint="regex(., '^\+265[0-9]{9}$')" jr:constraintMsg="Please enter a valid mobile number" required="true()"/>
      <bind nodeset="/enroll/person/alt_phone" type="string" constraint="regex(., '^\+265[0-9]{9}$')" jr:constraintMsg="Please enter a valid mobile number" required="false()"/>
      <bind nodeset="/enroll/person/language_preference" type="select1" required="true()"/>
      <bind nodeset="/enroll/person/language_code" type="string" calculate="if(selected( /enroll/person/language_preference , 'english'), 'eng', 'nya')"/>
      <bind nodeset="/enroll/person/telegram_id" type="string" required="false()"/>
      <bind nodeset="/enroll/summary/d_first_name" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_surname" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_national_id" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_filing_number" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_consent" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_phone" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_alt_phone" readonly="true()" type="string"/>
      <bind nodeset="/enroll/summary/d_selected_language" readonly="true()" type="string"/>
      <bind nodeset="/enroll/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/enroll/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/enroll/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/source_id">
        <label>Source ID</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/is_task">
        <label>Is Task</label>
      </input>
      <group ref="/enroll/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/enroll/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/enroll/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <group ref="/enroll/inputs/contact/parent">
          <label>Parent</label>
          <input ref="/enroll/inputs/contact/parent/_id">
            <label></label>
          </input>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/enroll/forbid">
      <label></label>
      <input ref="/enroll/forbid/n_edit">
        <label>&lt;span style="color:red;"&gt;You can not edit this form. Please cancel.&lt;/span&gt;</label>
      </input>
      <input appearance="hidden" ref="/enroll/forbid/no_edit">
        <label></label>
      </input>
    </group>
    <group appearance="field-list" ref="/enroll/person">
      <label></label>
      <group appearance="hidden" ref="/enroll/person/parent">
        <label></label>
        <group appearance="field-list" ref="/enroll/person/parent/parent">
          <label></label>
        </group>
      </group>
      <group appearance="hidden" ref="/enroll/person/rapidpro">
        <input ref="/enroll/person/rapidpro/optout">
          <label>Optout</label>
        </input>
        <input ref="/enroll/person/rapidpro/language">
          <label>Language</label>
        </input>
        <input ref="/enroll/person/rapidpro/reminders">
          <label>Reminders</label>
        </input>
        <input ref="/enroll/person/rapidpro/adherence">
          <label>Adherence</label>
        </input>
        <input ref="/enroll/person/rapidpro/visit_date">
          <label>Visit Date</label>
        </input>
      </group>
      <input ref="/enroll/person/first_name">
        <label>First name</label>
      </input>
      <input ref="/enroll/person/surname">
        <label>Surname</label>
      </input>
      <input appearance="number" ref="/enroll/person/national_id">
        <label>National ID</label>
        <hint>National ID should be numbers or letters between 6 and 13 characters long</hint>
      </input>
      <input ref="/enroll/person/filing_number">
        <label>Filing Number</label>
      </input>
      <select ref="/enroll/person/consent">
        <label>Does the patient consent to participate in the study?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
      </select>
      <input appearance="number" ref="/enroll/person/phone">
        <label>Client's Mobile phone number</label>
        <hint>Should start with the country code +265 followed by Nine digits</hint>
      </input>
      <input appearance="number" ref="/enroll/person/alt_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
        <hint>Should start with the country code +265 followed by Nine digits</hint>
      </input>
      <select1 ref="/enroll/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Chichewa</label>
          <value>chichewa</value>
        </item>
      </select1>
      <input ref="/enroll/person/telegram_id">
        <label>Telegram ID</label>
        <hint>This is for test purpose only</hint>
      </input>
    </group>
    <group appearance="field-list" ref="/enroll/summary">
      <label>Summary</label>
      <input ref="/enroll/summary/d_first_name">
        <label>First Name: <output value=" /enroll/person/first_name "/></label>
      </input>
      <input ref="/enroll/summary/d_surname">
        <label>Surname: <output value=" /enroll/person/surname "/></label>
      </input>
      <input ref="/enroll/summary/d_national_id">
        <label>National ID: <output value=" /enroll/person/national_id "/></label>
      </input>
      <input ref="/enroll/summary/d_filing_number">
        <label>Filing Number: <output value=" /enroll/person/filing_number "/></label>
      </input>
      <input ref="/enroll/summary/d_consent">
        <label>Consent: <output value=" /enroll/person/consent "/></label>
      </input>
      <input ref="/enroll/summary/d_phone">
        <label>Phone Number: <output value=" /enroll/person/phone "/></label>
      </input>
      <input ref="/enroll/summary/d_alt_phone">
        <label>Alternative/Next of Kin's Mobile Number: <output value=" /enroll/person/alt_phone "/></label>
      </input>
      <input ref="/enroll/summary/d_selected_language">
        <label>Preferred Language: <output value=" /enroll/person/language_preference "/></label>
      </input>
    </group>
  </h:body>
</h:html>
