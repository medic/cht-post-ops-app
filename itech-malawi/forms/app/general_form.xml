<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>General Form</h:title>
    <model>
      <instance>
        <r id="general_form" prefix="J1!general_form!" delimiter="#" version="2017-09-30 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <phone/>
              <mpc_no/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_phone/>
          <patient_id tag="hidden"/>
          <patient_mpc_id/>
          <tracing_outcome>
            <contact_name/>
            <contact_phone/>
            <contact_mpc_id/>
            <b2c_outcome/>
            <explain/>
          </tracing_outcome>
          <group_summary>
            <contact_name/>
            <contact_phone/>
            <contact_mpc_id/>
            <outcome/>
          </group_summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/inputs/contact/mpc_no" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/patient_phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/patient_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/patient_mpc_id" type="string" calculate="../inputs/contact/mpc_no"/>
      <bind nodeset="/r/tracing_outcome/contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/tracing_outcome/contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/tracing_outcome/contact_mpc_id" readonly="true()" type="string"/>
      <bind nodeset="/r/tracing_outcome/b2c_outcome" type="select1" required="true()"/>
      <bind nodeset="/r/tracing_outcome/explain" type="string" required="true()" relevant="selected( /r/tracing_outcome/b2c_outcome , 'other')"/>
      <bind nodeset="/r/group_summary/contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/contact_mpc_id" readonly="true()" type="string"/>
      <bind nodeset="/r/group_summary/outcome" readonly="true()" type="string"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
      </group>
    </group>
    <group appearance="field-list" ref="/r/tracing_outcome">
      <label>Complete this form to capture tracing outcome</label>
      <input ref="/r/tracing_outcome/contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/tracing_outcome/contact_phone">
        <label>Patient Phone: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/tracing_outcome/contact_mpc_id">
        <label>MPC ID: <output value=" /r/patient_mpc_id "/></label>
      </input>
      <select1 ref="/r/tracing_outcome/b2c_outcome">
        <label>Back To Care Outcome?</label>
        <item>
          <label>Error</label>
          <value>error</value>
        </item>
        <item>
          <label>File not found</label>
          <value>file_not_found</value>
        </item>
        <item>
          <label>Subsequent visit</label>
          <value>subsequent_visit</value>
        </item>
        <item>
          <label>Not traced</label>
          <value>not_traced</value>
        </item>
        <item>
          <label>Tracing rejected</label>
          <value>tracing_rejected</value>
        </item>
        <item>
          <label>No follow up attempt</label>
          <value>no_follow_up_attempt</value>
        </item>
        <item>
          <label>Dead</label>
          <value>dead</value>
        </item>
        <item>
          <label>T.O Self</label>
          <value>t_o_self</value>
        </item>
        <item>
          <label>T.O Official</label>
          <value>t_o_official</value>
        </item>
        <item>
          <label>Stop ARV self</label>
          <value>stop_arv_self</value>
        </item>
        <item>
          <label>Stop ARV Official</label>
          <value>stop_arv_official</value>
        </item>
        <item>
          <label>Refused to Answer</label>
          <value>refused_to_answer</value>
        </item>
        <item>
          <label>Never started ARVs</label>
          <value>never_started_arv</value>
        </item>
        <item>
          <label>On ARVs gaps</label>
          <value>on_arvs_gap</value>
        </item>
        <item>
          <label>On ARVs no gaps</label>
          <value>on_arvs_no_gap</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </select1>
      <input ref="/r/tracing_outcome/explain">
        <label>Please Explain</label>
      </input>
    </group>
    <group appearance="field-list" ref="/r/group_summary">
      <label>Summary</label>
      <input ref="/r/group_summary/contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/group_summary/contact_phone">
        <label>Patient Phone: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/group_summary/contact_mpc_id">
        <label>MPC ID: <output value=" /r/patient_mpc_id "/></label>
      </input>
      <input ref="/r/group_summary/outcome">
        <label>Back To Care Outcome: <output value=" /r/tracing_outcome/b2c_outcome "/></label>
      </input>
    </group>
  </h:body>
</h:html>
