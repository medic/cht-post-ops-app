<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Patient Transfer Outcome</h:title>
    <model>
      <instance>
        <r id="patient_transfer_outcome" prefix="J1!patient_transfer_outcome!" delimiter="#" version="17/3/2021 12:00:00 AM">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <request_id/>
            <request_date/>
            <contact>
              <_id/>
              <name/>
              <phone/>
              <national_id/>
              <filing_number/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_id/>
          <phone/>
          <patient_phone/>
          <transferred_out>TRUE</transferred_out>
          <rapidpro>
            <optout/>
          </rapidpro>
          <n>
            <n_header tag="hidden"/>
            <_contact_name/>
            <_contact_phone/>
            <_national_id/>
            <_filing_number/>
            <request>
              <_id/>
              <date_requested/>
            </request>
            <client_ok/>
            <additional_notes/>
          </n>
          <summary>
            <task_label/>
            <warning/>
            <description/>
            <patient_details/>
            <_contact_name/>
            <_contact_phone/>
            <_national_id/>
            <_filing_number/>
            <_findings/>
            <_outcome/>
            <_explanation/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/request_id" type="string"/>
      <bind nodeset="/r/inputs/request_date" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/inputs/contact/national_id" type="string"/>
      <bind nodeset="/r/inputs/contact/filing_number" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/patient_id" type="string" required="true()" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/patient_phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/transferred_out" type="string" required="true()" calculate="true()"/>
      <bind nodeset="/r/rapidpro/optout" type="string" calculate="true()"/>
      <bind nodeset="/r/n/n_header" readonly="true()" type="string"/>
      <bind nodeset="/r/n/_contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/n/_contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/n/_national_id" readonly="true()" type="string"/>
      <bind nodeset="/r/n/_filing_number" readonly="true()" type="string"/>
      <bind nodeset="/r/n/request/_id" type="string" calculate=" /r/inputs/request_id "/>
      <bind nodeset="/r/n/request/date_requested" type="string" calculate=" /r/inputs/request_date "/>
      <bind nodeset="/r/n/client_ok" type="select1" required="true()"/>
      <bind nodeset="/r/n/additional_notes" type="string" required="false()" relevant="selected(../client_ok, 'others')"/>
      <bind nodeset="/r/summary/task_label" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/warning" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/description" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/patient_details" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_national_id" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_filing_number" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_findings" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_outcome" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_explanation" readonly="true()" type="string"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/request_id">
        <label>Request ID</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/request_date">
        <label>Request Date</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input ref="/r/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input ref="/r/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
        <input ref="/r/inputs/contact/national_id">
          <label>National ID</label>
        </input>
        <input ref="/r/inputs/contact/filing_number">
          <label>Filing Number</label>
        </input>
      </group>
    </group>
    <group appearance="hidden" ref="/r/rapidpro">
      <label></label>
    </group>
    <group appearance="field-list" ref="/r/n">
      <label></label>
      <input ref="/r/n/n_header">
        <label>&lt;h4 style="color: #337ab7;"&gt;&lt;p&gt;Complete form if patient transferred clinic. Please note that the patient will no longer receive study messages when you submit this form.&lt;/p&gt;&lt;/h4&gt;</label>
      </input>
      <input ref="/r/n/_contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/n/_contact_phone">
        <label>Patient Phone Number: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/n/_national_id">
        <label>National ID: <output value=" /r/inputs/contact/national_id "/></label>
      </input>
      <input ref="/r/n/_filing_number">
        <label>Filing Number: <output value=" /r/inputs/contact/filing_number "/></label>
      </input>
      <group appearance="hidden" ref="/r/n/request">
        <label></label>
      </group>
      <select1 ref="/r/n/client_ok">
        <label>Have you notified the back to care team?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>Remind me again tomorrow</label>
          <value>remind_me</value>
        </item>
        <item>
          <label>Others</label>
          <value>others</value>
        </item>
      </select1>
      <input ref="/r/n/additional_notes">
        <label>Please explain</label>
      </input>
    </group>
    <group appearance="field-list summary" ref="/r/summary">
      <label></label>
      <input appearance="h1 blue" ref="/r/summary/task_label">
        <label>Task Label</label>
      </input>
      <input appearance="h1" ref="/r/summary/warning">
        <label>Be sure to submit to complete this action</label>
      </input>
      <input ref="/r/summary/description">
        <label>Form description: Complete form if patient transferred clinic. Please note that the patient will no longer receive study messages when you submit this form.</label>
      </input>
      <input appearance="h1 yellow" ref="/r/summary/patient_details">
        <label>Patient Details</label>
      </input>
      <input ref="/r/summary/_contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/summary/_contact_phone">
        <label>Patient Phone Number: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/summary/_national_id">
        <label>National ID: <output value=" /r/inputs/contact/national_id "/></label>
      </input>
      <input ref="/r/summary/_filing_number">
        <label>Filing Number: <output value=" /r/inputs/contact/filing_number "/></label>
      </input>
      <input appearance="h1 blue" ref="/r/summary/_findings">
        <label>Findings</label>
      </input>
      <input ref="/r/summary/_outcome">
        <label>Notified Back to Care?: <output value=" /r/n/client_ok "/></label>
      </input>
      <input ref="/r/summary/_explanation">
        <label>Notes: <output value=" /r/n/additional_notes "/></label>
      </input>
    </group>
  </h:body>
</h:html>
