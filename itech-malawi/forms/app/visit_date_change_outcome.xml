<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Visit Date Change Request</h:title>
    <model>
      <instance>
        <r id="visit_date_change_outcome" prefix="J1!visit_date_change_outcome!" delimiter="#" version="2020-03-06 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <request_id/>
            <contact>
              <_id/>
              <source_id/>
              <name/>
              <phone/>
              <national_id/>
              <filing_number/>
            </contact>
          </inputs>
          <patient_name/>
          <patient_id tag="hidden"/>
          <patient_phone/>
          <filing_no/>
          <national_iden/>
          <current_visit_date/>
          <rapidpro tag="hidden">
            <visit_date/>
          </rapidpro>
          <n>
            <contact_name tag="hidden"/>
            <contact_phone tag="hidden"/>
            <filing_number_note tag="hidden"/>
            <national_identifiction tag="hidden"/>
            <current_visit_date_g tag="hidden"/>
            <new_date/>
            <days_apart/>
            <request tag="hidden">
              <_id tag="hidden"/>
            </request>
          </n>
          <summary tag="hidden">
            <task_label tag="hidden"/>
            <_warning tag="hidden"/>
            <_description tag="hidden"/>
            <_patient_details tag="hidden"/>
            <contact_name tag="hidden"/>
            <contact_phone tag="hidden"/>
            <filing_number_note tag="hidden"/>
            <national_identifiction tag="hidden"/>
            <_findings tag="hidden"/>
            <prev_visit_date_g tag="hidden"/>
            <next_visit_date_g tag="hidden"/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </r>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/r/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/r/inputs/source" type="string"/>
      <bind nodeset="/r/inputs/source_id" type="string"/>
      <bind nodeset="/r/inputs/request_id" type="string"/>
      <bind nodeset="/r/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/r/inputs/contact/source_id" type="string"/>
      <bind nodeset="/r/inputs/contact/name" type="string"/>
      <bind nodeset="/r/inputs/contact/phone" type="string"/>
      <bind nodeset="/r/inputs/contact/national_id" type="string"/>
      <bind nodeset="/r/inputs/contact/filing_number" type="string"/>
      <bind nodeset="/r/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/r/patient_id" type="string" required="true()" calculate="../inputs/contact/_id"/>
      <bind nodeset="/r/patient_phone" type="string" calculate="../inputs/contact/phone"/>
      <bind nodeset="/r/filing_no" type="string" calculate="../inputs/contact/filing_number"/>
      <bind nodeset="/r/national_iden" type="string" calculate="../inputs/contact/national_id"/>
      <bind nodeset="/r/current_visit_date" type="string" calculate="coalesce(instance('contact-summary')/context/current_visit_date, .)"/>
      <bind nodeset="/r/rapidpro/visit_date" type="string" calculate="../../n/new_date"/>
      <bind nodeset="/r/n/contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/n/contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/n/filing_number_note" readonly="true()" type="string"/>
      <bind nodeset="/r/n/national_identifiction" readonly="true()" type="string"/>
      <bind nodeset="/r/n/current_visit_date_g" readonly="true()" type="string"/>
      <bind nodeset="/r/n/new_date" type="date" required="true()" constraint=".&gt;=date-time(floor(decimal-date-time(today()))) and ../days_apart &gt; 0 and ../days_apart &lt; 15"/>
      <bind nodeset="/r/n/days_apart" type="string" calculate="round((decimal-date-time( /r/n/new_date ) - decimal-date-time( /r/current_visit_date )) , 0)"/>
      <bind nodeset="/r/n/request/_id" type="string" calculate=" /r/inputs/request_id "/>
      <bind nodeset="/r/summary/task_label" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_warning" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_description" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/contact_name" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/contact_phone" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/filing_number_note" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/national_identifiction" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/_findings" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/prev_visit_date_g" readonly="true()" type="string"/>
      <bind nodeset="/r/summary/next_visit_date_g" readonly="true()" type="string"/>
      <bind nodeset="/r/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/r/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/r/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/source_id">
        <label>Source ID</label>
      </input>
      <input appearance="hidden" ref="/r/inputs/request_id">
        <label>Request ID</label>
      </input>
      <group ref="/r/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/r/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/source_id">
          <label>Source ID</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/national_id">
          <label>National ID</label>
        </input>
        <input appearance="hidden" ref="/r/inputs/contact/filing_number">
          <label>Filing Number</label>
        </input>
      </group>
    </group>
    <group ref="/r/rapidpro">
      <label></label>
    </group>
    <group appearance="field-list" ref="/r/n">
      <label></label>
      <input ref="/r/n/contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/n/contact_phone">
        <label>Patient Phone: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/n/filing_number_note">
        <label>Filing Number: <output value=" /r/filing_no "/></label>
      </input>
      <input ref="/r/n/national_identifiction">
        <label>National ID: <output value=" /r/national_iden "/></label>
      </input>
      <input ref="/r/n/current_visit_date_g">
        <label>Current Visit Date: <output value=" /r/current_visit_date "/></label>
      </input>
      <input ref="/r/n/new_date">
        <label>Please select date</label>
        <hint>Date should fall within 1-14 days after the current/old appointment visit date.</hint>
      </input>
      <group appearance="hidden" ref="/r/n/request">
        <label></label>
        <input ref="/r/n/request/_id">
          <label>Request Report</label>
        </input>
      </group>
    </group>
    <group appearance="field-list summary" ref="/r/summary">
      <label></label>
      <input appearance="h1 blue" ref="/r/summary/task_label">
        <label>Task Label</label>
      </input>
      <input ref="/r/summary/_warning">
        <label>Be sure to submit to complete this action</label>
      </input>
      <input ref="/r/summary/_description">
        <label>Complete form if patient would like to change their next appointment visit date. Please note that the visit reminders will be scheduled against this new date.</label>
      </input>
      <input appearance="h1 yellow" ref="/r/summary/_patient_details">
        <label>Patient Details &lt;I class="fa fa-user"&gt;&lt;/i&gt;</label>
      </input>
      <input ref="/r/summary/contact_name">
        <label>Patient Name: <output value=" /r/patient_name "/></label>
      </input>
      <input ref="/r/summary/contact_phone">
        <label>Patient Phone: <output value=" /r/patient_phone "/></label>
      </input>
      <input ref="/r/summary/filing_number_note">
        <label>Filing Number: <output value=" /r/filing_no "/></label>
      </input>
      <input ref="/r/summary/national_identifiction">
        <label>National ID: <output value=" /r/national_iden "/></label>
      </input>
      <input appearance="h1 blue" ref="/r/summary/_findings">
        <label>Dates</label>
      </input>
      <input ref="/r/summary/prev_visit_date_g">
        <label>Old Visit Date: <output value=" /r/current_visit_date "/></label>
      </input>
      <input ref="/r/summary/next_visit_date_g">
        <label>New Visit Date: <output value=" /r/n/new_date "/></label>
      </input>
    </group>
  </h:body>
</h:html>
