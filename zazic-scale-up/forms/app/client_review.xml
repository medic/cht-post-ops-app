          <item>
            <label>Mild</label>
            <value>mild</value>
          </item>
          <item>
            <label>Moderate</label>
            <value>moderate</value>
          </item>
          <item>
            <label>Severe</label>
            <value>severe</value>
          </item>
        </select1>
        <input ref="/r/n/trace_client/ae_type">
          <label>AE Code</label>
