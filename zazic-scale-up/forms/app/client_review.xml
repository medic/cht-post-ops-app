          <item>
            <label>5. Turf Clinic</label>
            <value>turf_clinic</value>
          </item>
          <item>
            <label>6. Donain Clinic</label>
            <value>donain_clinic</value>
          </item>
          <item>
            <label>7. Matobo District</label>
            <value>matobo_district</value>
          </item>
          <item>
            <label>8. Maphisa Hospital</label>
