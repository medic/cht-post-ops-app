<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Enroll New Person</h:title>
    <model>
      <instance>
        <enroll delimiter="#" id="enroll" prefix="J1!enroll!" version="2020-03-10 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <is_task/>
            <contact>
              <_id/>
              <name/>
              <phone/>
              <parent>
                <_id/>
              </parent>
            </contact>
          </inputs>
          <patient_name/>
          <patient_uuid db-doc-ref=" /enroll/person "/>
          <place_id/>
          <phone/>
          <language_preference/>
          <person db-doc="true">
            <parent>
              <_id/>
              <parent>
                <_id/>
              </parent>
            </parent>
            <type/>
            <name/>
            <enrollment_facility/>
            <enrollment_facility_other/>
            <enrollment_location/>
            <vmmc_no/>
            <age_years/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
          </person>
          <meta>
            <instanceID/>
          </meta>
        </enroll>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/enroll/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/enroll/inputs/source" type="string"/>
      <bind nodeset="/enroll/inputs/source_id" type="string"/>
      <bind nodeset="/enroll/inputs/is_task" type="string"/>
      <bind nodeset="/enroll/inputs/contact/_id" required="true()" type="db:person"/>
      <bind nodeset="/enroll/inputs/contact/name" type="string"/>
      <bind nodeset="/enroll/inputs/contact/phone" type="string"/>
      <bind nodeset="/enroll/inputs/contact/parent/_id" type="string"/>
      <bind calculate="../person/name" nodeset="/enroll/patient_name" type="string"/>
      <bind calculate="person" nodeset="/enroll/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/enroll/place_id" type="string"/>
      <bind calculate="../person/phone" nodeset="/enroll/phone" type="string"/>
      <bind calculate="../person/language_preference" nodeset="/enroll/language_preference" type="string"/>
      <bind calculate="../../../inputs/contact/_id" nodeset="/enroll/person/parent/_id" type="string"/>
      <bind calculate="../../../../inputs/contact/parent/_id" nodeset="/enroll/person/parent/parent/_id" type="string"/>
      <bind calculate="&quot;person&quot;" jr:constraintMsg="person" nodeset="/enroll/person/type" type="string"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/enroll/person/name" required="true()" type="string"/>
      <bind nodeset="/enroll/person/enrollment_facility" required="true()" type="select1"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please enter Enrollment Facility" nodeset="/enroll/person/enrollment_facility_other" relevant=" /enroll/person/enrollment_facility  = 'other'" required="false()" type="string"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="This should be the place where the actual enrollment happened." nodeset="/enroll/person/enrollment_location" required="true()" type="string"/>
      <bind constraint="regex(., '^[0-9]{5,9}$')" jr:constraintMsg="Please enter between 5 - 9 digits" nodeset="/enroll/person/vmmc_no" required="true()" type="string"/>
      <bind constraint="(.) &gt;= 18 and (.) &lt;= 75" jr:constraintMsg="Client should be from 18 to 75 years old" nodeset="/enroll/person/age_years" required="true()" type="decimal"/>
      <bind constraint="regex(., &quot;^(\+263)([0-9]{9})$&quot;)" jr:constraintMsg="Please enter a valid mobile number" nodeset="/enroll/person/phone" required="true()" type="string"/>
      <bind constraint="regex(., &quot;^(\+263)([0-9]{9})$&quot;)" jr:constraintMsg="Please enter a valid mobile number" nodeset="/enroll/person/alternative_phone" required="false()" type="string"/>
      <bind nodeset="/enroll/person/language_preference" required="true()" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/enroll/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/enroll/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/enroll/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/source_id">
        <label>Source ID</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/is_task">
        <label>Is Task</label>
      </input>
      <group ref="/enroll/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/enroll/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input appearance="hidden" ref="/enroll/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input appearance="hidden" ref="/enroll/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
        <group ref="/enroll/inputs/contact/parent">
          <label>Parent</label>
          <input ref="/enroll/inputs/contact/parent/_id">
            <label></label>
          </input>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/enroll/person">
      <label></label>
      <group appearance="hidden" ref="/enroll/person/parent">
        <label></label>
        <group appearance="field-list" ref="/enroll/person/parent/parent">
          <label></label>
        </group>
      </group>
      <input ref="/enroll/person/name">
        <label>VMMC Client Name</label>
      </input>
      <select1 ref="/enroll/person/enrollment_facility">
        <label>VMMC Enrollment Facility</label>
        <item>
          <label>1. Chitungwiza-Seke North clinic</label>
          <value>seke_north</value>
        </item>
        <item>
          <label>2. Chitungwiza-Seke South clinic</label>
          <value>seke_south</value>
        </item>
        <item>
          <label>3. Chitungwiza-City Med hospital</label>
          <value>city_med</value>
        </item>
        <item>
          <label>4. Chitungwiza-Zengeza Clinic</label>
          <value>zengeza</value>
        </item>
        <item>
          <label>5. Chitungwiza-Chitungwiza Central Hospital</label>
          <value>chitungwiza_central</value>
        </item>
        <item>
          <label>6. Chegutu- Norton hospital</label>
          <value>chegutu_norton</value>
        </item>
        <item>
          <label>7. Chegutu- District Hospital</label>
          <value>chegutu_district</value>
        </item>
        <item>
          <label>8. Chegutu-Monera clinic(Norton Outreach)</label>
          <value>monera</value>
        </item>
        <item>
          <label>9. Marondera- Marondera District Hospital</label>
          <value>marondera</value>
        </item>
        <item>
          <label>10. Marondera- Mahusekwa Hospital</label>
          <value>mahusekwa</value>
        </item>
        <item>
          <label>11. Goromonzi-Makumbe Mission Hospital</label>
          <value>makumbe</value>
        </item>
        <item>
          <label>12. Goromonzi-Ruwa Rehab Hospital</label>
          <value>ruwa</value>
        </item>
        <item>
          <label>13. Sanyati-Kadoma Hospital</label>
          <value>kadoma</value>
        </item>
        <item>
          <label>14. Zaka-Ndanga District Hospital</label>
          <value>ndanga</value>
        </item>
        <item>
          <label>15. Zaka-Musiso Mission Hospital</label>
          <value>musiso</value>
        </item>
        <item>
          <label>16. Mberengwa-Mnene Mission Hospital</label>
          <value>mnene</value>
        </item>
        <item>
          <label>17. Mberengwa-Musume Mission Hospital</label>
          <value>musume</value>
        </item>
        <item>
          <label>18. Mberengwa-Mberengwa District Hospital</label>
          <value>mberengwa</value>
        </item>
        <item>
          <label>19. Mberengwa-Masase Mission Hospital</label>
          <value>masase</value>
        </item>
      </select1>
      <input ref="/enroll/person/enrollment_facility_other">
        <label>Specify other</label>
      </input>
      <input ref="/enroll/person/enrollment_location">
        <label>Specify Enrollment Location</label>
      </input>
      <input appearance="number" ref="/enroll/person/vmmc_no">
        <label>VMMC Client Number</label>
      </input>
      <input appearance="number" ref="/enroll/person/age_years">
        <label>VMMC Client Age in Years</label>
      </input>
      <input ref="/enroll/person/phone">
        <label>Client Mobile phone number</label>
        <hint>Should start with the country code
+263 followed by Nine digits</hint>
      </input>
      <input ref="/enroll/person/alternative_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
        <hint>Should start with the country code
+263 followed by Nine digits</hint>
      </input>
      <select1 ref="/enroll/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Shona</label>
          <value>shona</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
