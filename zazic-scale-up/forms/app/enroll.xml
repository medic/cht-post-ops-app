<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Enroll New Person</h:title>
    <model>
      <instance>
        <enroll id="enroll" prefix="J1!enroll!" delimiter="#" version="2020-03-10 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <is_task/>
            <contact>
              <_id/>
              <name/>
              <phone/>
              <parent>
                <_id/>
              </parent>
            </contact>
          </inputs>
          <patient_name/>
          <patient_uuid db-doc-ref=" /enroll/person "/>
          <place_id/>
          <phone/>
          <language_preference/>
          <person db-doc="true">
            <parent>
              <_id/>
              <parent>
                <_id/>
              </parent>
            </parent>
            <type/>
            <name/>
            <enrollment_facility>
              <_id/>
              <name/>
            </enrollment_facility>
            <enrollment_location/>
            <vmmc_no/>
            <age_years/>
            <is_minor/>
            <phone_owner/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
          </person>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </enroll>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/enroll/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/enroll/inputs/source" type="string"/>
      <bind nodeset="/enroll/inputs/source_id" type="string"/>
      <bind nodeset="/enroll/inputs/is_task" type="string"/>
      <bind nodeset="/enroll/inputs/contact/_id" type="db:person" required="true()"/>
      <bind nodeset="/enroll/inputs/contact/name" type="string"/>
      <bind nodeset="/enroll/inputs/contact/phone" type="string"/>
      <bind nodeset="/enroll/inputs/contact/parent/_id" type="string"/>
      <bind nodeset="/enroll/patient_name" type="string" calculate="../person/name"/>
      <bind nodeset="/enroll/patient_uuid" type="string" calculate="person"/>
      <bind nodeset="/enroll/place_id" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/enroll/phone" type="string" calculate="../person/phone"/>
      <bind nodeset="/enroll/language_preference" type="string" calculate="../person/language_preference"/>
      <bind nodeset="/enroll/person/parent/_id" type="string" calculate="../../../inputs/contact/_id"/>
      <bind nodeset="/enroll/person/parent/parent/_id" type="string" calculate="../../../../inputs/contact/parent/_id"/>
      <bind nodeset="/enroll/person/type" type="string" calculate="&quot;person&quot;" jr:constraintMsg="person"/>
      <bind nodeset="/enroll/person/name" type="string" required="true()" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space."/>
      <bind nodeset="/enroll/person/enrollment_facility/_id" type="db:health_center" required="true()"/>
      <bind nodeset="/enroll/person/enrollment_facility/name" type="string"/>
      <bind nodeset="/enroll/person/enrollment_location" type="string" required="true()" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="This should be the place where the actual enrollment happened."/>
      <bind nodeset="/enroll/person/vmmc_no" type="string" required="true()" constraint="regex(., '^[0-9]{5,9}$')" jr:constraintMsg="Please enter between 5 - 9 digits"/>
      <bind nodeset="/enroll/person/age_years" type="decimal" required="true()" constraint="(.) &gt;= 15 and (.) &lt;= 75" jr:constraintMsg="Client should be from 18 to 75 years old"/>
      <bind nodeset="/enroll/person/is_minor" type="string" calculate=" /enroll/person/age_years  &lt; 18"/>
      <bind nodeset="/enroll/person/phone_owner" type="select1" relevant=" /enroll/person/age_years  != ''"/>
      <bind nodeset="/enroll/person/phone" type="string" required="true()" constraint="regex(., &quot;^(\+263)([0-9]{9})$&quot;)" jr:constraintMsg="Please enter a valid mobile number"/>
      <bind nodeset="/enroll/person/alternative_phone" type="string" required="false()" constraint="regex(., &quot;^(\+263)([0-9]{9})$&quot;)" jr:constraintMsg="Please enter a valid mobile number"/>
      <bind nodeset="/enroll/person/language_preference" type="select1" required="true()"/>
      <bind nodeset="/enroll/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/enroll/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/enroll/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/source_id">
        <label>Source ID</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/is_task">
        <label>Is Task</label>
      </input>
      <group ref="/enroll/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/enroll/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a patient from list</hint>
        </input>
        <input appearance="hidden" ref="/enroll/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input appearance="hidden" ref="/enroll/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
        <group ref="/enroll/inputs/contact/parent">
          <label>Parent</label>
          <input ref="/enroll/inputs/contact/parent/_id">
            <label></label>
          </input>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/enroll/person">
      <label></label>
      <group appearance="hidden" ref="/enroll/person/parent">
        <label></label>
        <group appearance="field-list" ref="/enroll/person/parent/parent">
          <label></label>
        </group>
      </group>
      <input ref="/enroll/person/name">
        <label>VMMC Client Name</label>
      </input>
      <group ref="/enroll/person/enrollment_facility">
        <label></label>
        <input appearance="db-object" ref="/enroll/person/enrollment_facility/_id">
          <label>VMMC Enrollment Facility</label>
        </input>
        <input appearance="hidden" ref="/enroll/person/enrollment_facility/name"/>
      </group>
      <input ref="/enroll/person/enrollment_location">
        <label>Specify Enrollment Location</label>
      </input>
      <input appearance="number" ref="/enroll/person/vmmc_no">
        <label>VMMC Client Number</label>
      </input>
      <input appearance="number" ref="/enroll/person/age_years">
        <label>VMMC Client Age in Years</label>
      </input>
      <select1 ref="/enroll/person/phone_owner">
        <label>Whose Phone Number Is Minor Enrolling With?</label>
        <item>
          <label>Minor's</label>
          <value>minor</value>
        </item>
        <item>
          <label>Guardian's</label>
          <value>guardian</value>
        </item>
      </select1>
      <input ref="/enroll/person/phone">
        <label>Client Mobile phone number</label>
        <hint>Should start with the country code
+263 followed by Nine digits</hint>
      </input>
      <input ref="/enroll/person/alternative_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
        <hint>Should start with the country code
+263 followed by Nine digits</hint>
      </input>
      <select1 ref="/enroll/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Shona</label>
          <value>shona</value>
        </item>
        <item>
          <label>Ndebele</label>
          <value>ndebele</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
