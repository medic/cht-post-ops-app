<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Enroll New Person</h:title>
    <model>
      <instance>
        <enroll delimiter="#" id="enroll" prefix="J1!enroll!" version="2020-03-10 00:00:00">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <phone/>
              <parent>
                <_id/>
              </parent>
            </contact>
          </inputs>
          <patient_name/>
          <patient_uuid db-doc-ref=" /enroll/person "/>
          <place_id/>
          <phone/>
          <language_preference/>
          <person db-doc="true">
            <parent>
              <_id/>
              <parent>
                <_id/>
              </parent>
            </parent>
            <type/>
            <parent_id/>
            <contact_name/>
            <n_parent_id/>
            <name/>
            <enrollment_location/>
            <vmmc_no/>
            <age_years/>
            <enrollment_date/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
            <enrollment_nurse/>
          </person>
          <meta>
            <instanceID/>
          </meta>
        </enroll>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/enroll/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/enroll/inputs/source" type="string"/>
      <bind nodeset="/enroll/inputs/source_id" type="string"/>
      <bind nodeset="/enroll/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/enroll/inputs/contact/name" type="string"/>
      <bind nodeset="/enroll/inputs/contact/phone" type="string"/>
      <bind nodeset="/enroll/inputs/contact/parent/_id" type="string"/>
      <bind calculate="../person/name" nodeset="/enroll/patient_name" type="string"/>
      <bind calculate="person" nodeset="/enroll/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/enroll/place_id" type="string"/>
      <bind calculate="../person/phone" nodeset="/enroll/phone" type="string"/>
      <bind calculate="../person/language_preference" nodeset="/enroll/language_preference" type="string"/>
      <bind calculate="../../../inputs/contact/_id" nodeset="/enroll/person/parent/_id" type="string"/>
      <bind calculate="../../../../inputs/contact/parent/_id" nodeset="/enroll/person/parent/parent/_id" type="string"/>
      <bind calculate="&quot;person&quot;" jr:constraintMsg="person" nodeset="/enroll/person/type" type="string"/>
      <bind calculate="../../inputs/contact/parent/_id" nodeset="/enroll/person/parent_id" type="string"/>
      <bind calculate="../../inputs/contact/name" nodeset="/enroll/person/contact_name" type="string"/>
      <bind nodeset="/enroll/person/n_parent_id" readonly="true()" type="string"/>
      <bind nodeset="/enroll/person/name" required="true()" type="string"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/enroll/person/enrollment_location" required="true()" type="string"/>
      <bind constraint="regex(., '^[0-9]{5,9}$')" jr:constraintMsg="Must be 5 â€“ 9 numeric digits" nodeset="/enroll/person/vmmc_no" required="true()" type="string"/>
      <bind constraint="(.) &gt;= 18 and (.) &lt;= 75" jr:constraintMsg="Only 18 - 75 yrs old men can enroll." nodeset="/enroll/person/age_years" required="true()" type="decimal"/>
      <bind constraint="decimal-date-time(.) &lt;= floor(decimal-date-time(today()))" jr:constraintMsg="Date cannot be in the future" nodeset="/enroll/person/enrollment_date" required="true()" type="date"/>
      <bind constraint="regex(., '^\+?\d{3,15}$')" nodeset="/enroll/person/phone" required="true()" type="string"/>
      <bind constraint="regex(., '^\+?\d{3,15}$')" nodeset="/enroll/person/alternative_phone" required="false()" type="string"/>
      <bind nodeset="/enroll/person/language_preference" type="select1"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/enroll/person/enrollment_nurse" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/enroll/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/enroll/inputs">
      <label>Patient</label>
      <input appearance="hidden" ref="/enroll/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/enroll/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/enroll/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/enroll/inputs/contact/_id">
          <label>What is the patient's name?</label>
          <hint>Select a person from list</hint>
        </input>
        <input ref="/enroll/inputs/contact/name">
          <label>Patient Name</label>
        </input>
        <input ref="/enroll/inputs/contact/phone">
          <label>Phone Number</label>
        </input>
        <group ref="/enroll/inputs/contact/parent">
          <label>Parent</label>
          <input ref="/enroll/inputs/contact/parent/_id">
            <label></label>
          </input>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/enroll/person">
      <label></label>
      <group appearance="hidden" ref="/enroll/person/parent">
        <label></label>
        <group appearance="field-list" ref="/enroll/person/parent/parent">
          <label></label>
        </group>
      </group>
      <input ref="/enroll/person/n_parent_id">
        <label>Parent id: <output value=" /enroll/person/parent_id "/>, Name: <output value=" /enroll/person/contact_name "/></label></input>
      <input ref="/enroll/person/name">
        <label>VMMC Client Name</label>
      </input>
      <input ref="/enroll/person/enrollment_location">
        <label>Specify Enrollment Location</label>
      </input>
      <input ref="/enroll/person/vmmc_no">
        <label>VMMC Client Number</label>
      </input>
      <input ref="/enroll/person/age_years">
        <label>VMMC Client Age in Years</label>
      </input>
      <input ref="/enroll/person/enrollment_date">
        <label>Enrollment Date</label>
      </input>
      <input ref="/enroll/person/phone">
        <label>Client Mobile phone number</label>
      </input>
      <input ref="/enroll/person/alternative_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
      </input>
      <select1 ref="/enroll/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Shona</label>
          <value>shona</value>
        </item>
      </select1>
      <input ref="/enroll/person/enrollment_nurse">
        <label>Name of enrollment nurse</label>
      </input>
    </group>
  </h:body>
</h:html>
