<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Edit Person</h:title>
    <model>
      <instance>
        <data id="contact:person:edit" prefix="J1!contact:person:edit!" delimiter="#" version="2020-04-15 00:00:00">
          <person>
            <parent>PARENT</parent>
            <type>person</type>
            <name/>
            <enrollment_facility/>
            <enrollment_location/>
            <vmmc_no/>
            <age_years/>
            <enrollment_date/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
            <enrollment_nurse/>
          </person>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind nodeset="/data/person/name" type="string" jr:constraintMsg="Please type in name characters e.g letters and space." constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" required="true()"/>
      <bind nodeset="/data/person/enrollment_facility" type="select1" required="true()"/>
      <bind nodeset="/data/person/enrollment_location" type="string" jr:constraintMsg="Please type in name characters e.g letters and space." constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" required="true()"/>
      <bind nodeset="/data/person/vmmc_no" type="string" jr:constraintMsg="Must be 5 â€“ 9 numeric digits" constraint="regex(., '^[0-9]{5,9}$')" required="true()"/>
      <bind nodeset="/data/person/age_years" type="decimal" jr:constraintMsg="Only 18 - 75 yrs old men can enroll." constraint="(.) &gt;= 18 and (.) &lt;= 75" required="true()"/>
      <bind nodeset="/data/person/enrollment_date" type="date" jr:constraintMsg="Only today's date is allowed" constraint="decimal-date-time(.) = floor(decimal-date-time(today()))" required="true()"/>
      <bind nodeset="/data/person/phone" type="string" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" constraint="regex(., '^\+263[0-9]{9}$')" required="true()"/>
      <bind nodeset="/data/person/alternative_phone" type="string" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" constraint="regex(., '^\+263[0-9]{9}$')" required="false()"/>
      <bind nodeset="/data/person/language_preference" type="select1" required="true()"/>
      <bind nodeset="/data/person/enrollment_nurse" type="string" jr:constraintMsg="Please type in name characters e.g letters and space." constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" required="true()"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
