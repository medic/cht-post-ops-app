<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Edit Person</h:title>
    <model>
      <instance>
        <data delimiter="#" id="contact:person:edit" prefix="J1!contact:person:edit!" version="2020-04-15 00:00:00">
          <person>
            <parent>PARENT</parent>
            <type>person</type>
            <name/>
            <enrollment_facility/>
            <enrollment_location/>
            <vmmc_no/>
            <age_years/>
            <enrollment_date/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
            <enrollment_nurse/>
          </person>
          <meta>
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/data/person/name" required="true()" type="string"/>
      <bind nodeset="/data/person/enrollment_facility" required="true()" type="select1"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/data/person/enrollment_location" required="true()" type="string"/>
      <bind constraint="regex(., '^[0-9]{5,9}$')" jr:constraintMsg="Must be 5 â€“ 9 numeric digits" nodeset="/data/person/vmmc_no" required="true()" type="string"/>
      <bind constraint="(.) &gt;= 18 and (.) &lt;= 75" jr:constraintMsg="Only 18 - 75 yrs old men can enroll." nodeset="/data/person/age_years" required="true()" type="decimal"/>
      <bind constraint="decimal-date-time(.) = floor(decimal-date-time(today()))" jr:constraintMsg="Only today's date is allowed" nodeset="/data/person/enrollment_date" required="true()" type="date"/>
      <bind constraint="regex(., '^\+263[0-9]{9}$')" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" nodeset="/data/person/phone" required="true()" type="string"/>
      <bind constraint="regex(., '^\+263[0-9]{9}$')" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" nodeset="/data/person/alternative_phone" required="false()" type="string"/>
      <bind nodeset="/data/person/language_preference" required="true()" type="select1"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/data/person/enrollment_nurse" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
