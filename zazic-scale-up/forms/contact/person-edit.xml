<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Edit Person</h:title>
    <model>
      <instance>
        <data id="contact:person:edit" prefix="J1!contact:person:edit!" delimiter="#" version="2020-04-15 00:00:00">
          <person>
            <parent>PARENT</parent>
            <type>person</type>
            <name/>
            <enrollment_facility>
              <_id/>
              <name/>
            </enrollment_facility>
            <enrollment_location/>
            <vmmc_no/>
            <age_years/>
            <enrollment_date/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
            <enrollment_nurse/>
          </person>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind nodeset="/data/person/name" type="string" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." required="true()"/>
      <bind nodeset="/data/person/enrollment_facility/_id" type="db:health_center" required="true()"/>
      <bind nodeset="/data/person/enrollment_facility/name" type="string"/>
      <bind nodeset="/data/person/enrollment_location" type="string" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." required="true()"/>
      <bind nodeset="/data/person/vmmc_no" type="string" constraint="regex(., '^[0-9]{5,9}$')" jr:constraintMsg="Must be 5 â€“ 9 numeric digits" required="true()"/>
      <bind nodeset="/data/person/age_years" type="decimal" constraint="(.) &gt;= 18 and (.) &lt;= 75" jr:constraintMsg="Only 18 - 75 yrs old men can enroll." required="true()"/>
      <bind nodeset="/data/person/enrollment_date" type="date" constraint="decimal-date-time(.) = floor(decimal-date-time(today()))" jr:constraintMsg="Only today's date is allowed" required="true()"/>
      <bind nodeset="/data/person/phone" type="string" constraint="regex(., '^\+263[0-9]{9}$')" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" required="true()"/>
      <bind nodeset="/data/person/alternative_phone" type="string" constraint="regex(., '^\+263[0-9]{9}$')" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" required="false()"/>
      <bind nodeset="/data/person/language_preference" type="select1" required="true()"/>
      <bind nodeset="/data/person/enrollment_nurse" type="string" constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." required="true()"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/person">
      <label></label>
      <input appearance="hidden" ref="/data/person/parent">
        <label>Parent</label>
      </input>
      <input appearance="hidden" ref="/data/person/type">
        <label>Person Type</label>
        <hint>mandatory</hint>
      </input>
      <input ref="/data/person/name">
        <label>VMMC Client Name</label>
      </input>
      <group ref="/data/person/enrollment_facility">
        <label>VMMC Enrollment Facility</label>
        <input appearance="db-object" ref="/data/person/enrollment_facility/_id">
          <label>Which clinic?</label>
        </input>
        <input appearance="hidden" ref="/data/person/enrollment_facility/name"/>
      </group>
      <input ref="/data/person/enrollment_location">
        <label>Specify Enrollment Location</label>
      </input>
      <input ref="/data/person/vmmc_no">
        <label>VMMC Client Number</label>
      </input>
      <input ref="/data/person/age_years">
        <label>VMMC Client Age in Years</label>
      </input>
      <input ref="/data/person/enrollment_date">
        <label>Enrollment Date</label>
      </input>
      <input ref="/data/person/phone">
        <label>Client Mobile phone number</label>
      </input>
      <input ref="/data/person/alternative_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
      </input>
      <select1 ref="/data/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Shona</label>
          <value>shona</value>
        </item>
        <item>
          <label>Ndebele</label>
          <value>ndebele</value>
        </item>
      </select1>
      <input ref="/data/person/enrollment_nurse">
        <label>Name of enrollment nurse</label>
      </input>
    </group>
  </h:body>
</h:html>
