<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Enroll New Person</h:title>
    <model>
      <instance>
        <data delimiter="#" id="contact:person:create" prefix="J1!contact:person:create!" version="2017-10-16 00:00:00">
          <person>
            <parent>PARENT</parent>
            <type>person</type>
            <name/>
            <phone/>
            <alternative_phone/>
            <language_preference/>
            <enrollment_report/>
          </person>
          <patient_name/>
          <enroll>
            <type>person</type>
            <patient_id/>
            <phone/>
            <contact>
              <_id/>
              <parent>PARENT</parent>
            </contact>
          </enroll>
          <meta>
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind constraint="regex(., &quot;^[a-zA-Z\'\s]+$&quot;)" jr:constraintMsg="Please type in name characters e.g letters and space." nodeset="/data/person/name" required="true()" type="string"/>
      <bind constraint="regex(., '^\+263[0-9]{9}$')" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" nodeset="/data/person/phone" required="true()" type="string"/>
      <bind constraint="regex(., '^\+263[0-9]{9}$')" jr:constraintMsg="Please enter phone number in the format +263xxxxxxxxx" nodeset="/data/person/alternative_phone" required="false()" type="string"/>
      <bind nodeset="/data/person/language_preference" required="true()" type="select1"/>
      <bind calculate="enroll" nodeset="/data/person/enrollment_report" type="string"/>
      <bind calculate="../person/name" nodeset="/data/patient_name" type="string"/>
      <bind nodeset="/data/enroll/type" type="string"/>
      <bind calculate=" /data/person " nodeset="/data/enroll/patient_id" type="string"/>
      <bind calculate="../../person/phone" nodeset="/data/enroll/phone" type="string"/>
      <bind calculate=" /data/person " nodeset="/data/enroll/contact/_id" type="string"/>
      <bind calculate="PARENT" nodeset="/data/enroll/contact/parent" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/data/person">
      <input appearance="hidden" ref="/data/person/parent">
        <label>Parent</label>
      </input>
      <input appearance="hidden" ref="/data/person/type">
        <label>Person Type</label>
        <hint>mandatory</hint>
      </input>
      <input ref="/data/person/name">
        <label>VMMC Client Name</label>
      </input>
      <input ref="/data/person/phone">
        <label>Client Mobile phone number</label>
      </input>
      <input ref="/data/person/alternative_phone">
        <label>Alternative/Next of Kin's Mobile Number</label>
      </input>
      <select1 ref="/data/person/language_preference">
        <label>What is this client's language of preference for the texts?</label>
        <item>
          <label>English</label>
          <value>english</value>
        </item>
        <item>
          <label>Shona</label>
          <value>shona</value>
        </item>
      </select1>
      <input ref="/data/person/enrollment_report">
        <label></label>
      </input>
    </group>
    <group appearance="field-list" ref="/data/enroll">
      <label><output value=" /data/patient_name "/>'s enrollment</label>
      <input appearance="hidden" ref="/data/enroll/type">
        <label></label>
        <hint>mandatory</hint>
      </input>
      <group appearance="field-list" ref="/data/enroll/contact">
        <label></label>
        <input appearance="hidden" ref="/data/enroll/contact/_id">
          <label></label>
        </input>
        <input appearance="hidden" ref="/data/enroll/contact/parent">
          <label></label>
        </input>
      </group>
    </group>
  </h:body>
</h:html>
